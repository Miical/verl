{
  "output_dir": null,
  "job_name": "actor_sa_piper_run1",
  "seed": 1000,
  "dataset": {
    "repo_id": "local/dummy_eval_only",
    "root": null,
    "use_imagenet_stats": true
  },
  "policy": {
    "repo_id": "local/dummy_eval_only",
    "type": "pi0",
    "device": "cuda",
    "pretrained_path": "/home/agilex-home/agilex/zhehao.dong/checkpoints/lerobot_hil-serl/pi0_training/20251125T005_lsz001_01_endpose/015000/pretrained_model",

    "input_features": {
      "observation.images.cam_high": { "type": "VISUAL", "shape": [3, 128, 128] },
      "observation.images.cam_left_wrist": { "type": "VISUAL", "shape": [3, 128, 128] },
      "observation.images.cam_right_wrist": { "type": "VISUAL", "shape": [3, 128, 128] }
    },
    "output_features": {
      "action": { "type": "ACTION", "shape": [14] }
    }
  },

  "env": {
    "type": "gym_manipulator",
    "name": "real_robot",
    "fps": 30,

    "robot": {
      "type": "piper_follower_end_effector",
      "urdf_path": "local_assets/piper.urdf",
      "target_frame_name": "link6",
      "cameras": {
        "front": {
          "type": "orbbec_dabai",
          "serial_number_or_name": "CC1B25100EM",
          "width": 640,
          "height": 480,
          "fps": 30
        },
        "left": {
          "type": "intelrealsense",
          "serial_number_or_name": "242522071187",
          "width": 640,
          "height": 480,
          "fps": 30
        },
        "right": {
          "type": "intelrealsense",
          "serial_number_or_name": "327122075682",
          "width": 640,
          "height": 480,
          "fps": 30
        }
      }
    },

    "teleop": {
      "type": "keyboard_ee",
      "use_gripper": true
    },

    "processor": {
      "observation": {
        "display_cameras": true,
        "add_joint_velocity_to_observation": false,
        "add_current_to_observation": false
